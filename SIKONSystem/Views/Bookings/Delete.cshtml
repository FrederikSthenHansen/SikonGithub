@model SIKONSystem.Models.Booking

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <a asp-action="Index">Tilbage til oversigten</a>
</div>

<h1>Slet</h1>

<h3>Denne booking vil blive slettet.</h3>
<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lecture)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lecture.Title)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BookingId" />
        <input type="submit" value="Slet" class="btn btn-danger" onclick="return confirm('Du er ved at slette alt data for denne booking.\n\nTryk OK for at fortsætte. Tryk Cancel for at fortryde.')" />
    </form>
</div>

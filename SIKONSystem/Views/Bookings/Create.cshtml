@model SIKONSystem.Models.Booking

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <a asp-action="Index">Tilbage til oversigten</a>
</div>

<h1>Opret booking</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="LectureId" class="control-label"></label>
                <select asp-for="LectureId" class ="form-control" asp-items="ViewBag.LectureId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Opret" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

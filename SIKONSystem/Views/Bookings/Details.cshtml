@model SIKONSystem.Models.Booking

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <a asp-action="Index">Tilbage til oversigten</a>
</div>

<h1>Detaljer</h1>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lecture)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lecture.Title)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BookingId">Rediger</a> |
    <a asp-action="Delete" asp-route-id="@Model.BookingId">Slet</a>
</div>
